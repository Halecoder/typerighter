#!/bin/bash -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

IS_DEBUG=false
DO_CHECKS=true

for arg in "$@"
do
  if [[ "$arg" == "--debug" ]]; then
    IS_DEBUG=true
    shift
  fi
  if [[ "$arg" == "--checks-complete" ]]; then
    DO_CHECKS=false
    shift
  fi
done

makeChecks() {
  . "${DIR}"/lib/check
}

runChecker() {
  if [[ "$IS_DEBUG" = true ]]; then
    sbt -jvm-debug 5005 "checker / run"
  else
    sbt "checker / run"
  fi
}

if [[ "$DO_CHECKS" = true ]]; then
  makeChecks
fi

printf "ðŸŒŸ Rule checker will be available at https://checker.typerighter.local.dev-gutools.co.uk when ready\n"
runChecker
